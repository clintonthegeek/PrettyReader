{
    "name": "Academic",
    "version": 2,
    "description": "Clean serif typography for academic reading",

    "paragraphStyles": {
        "Default Paragraph Style": {
            "fontFamily": "Noto Serif",
            "fontSize": 12.0,
            "lineHeightPercent": 100,
            "foreground": "#1a1a1a",
            "fontFeatures": ["liga", "kern", "calt", "onum"]
        },
        "Heading": {
            "parent": "Default Paragraph Style",
            "fontWeight": "bold",
            "alignment": "left"
        },
        "BodyText": {
            "parent": "Default Paragraph Style",
            "spaceAfter": 8.0,
            "alignment": "justify"
        },
        "Heading1": {
            "parent": "Heading",
            "fontSize": 26.0,
            "spaceBefore": 28.0,
            "spaceAfter": 14.0,
            "foreground": "#2c3e50"
        },
        "Heading2": {
            "parent": "Heading",
            "fontSize": 20.0,
            "spaceBefore": 22.0,
            "spaceAfter": 10.0,
            "foreground": "#2c3e50"
        },
        "Heading3": {
            "parent": "Heading",
            "fontSize": 16.0,
            "fontItalic": true,
            "spaceBefore": 18.0,
            "spaceAfter": 8.0,
            "foreground": "#2c3e50"
        },
        "Heading4": {
            "parent": "Heading",
            "fontSize": 14.0,
            "spaceBefore": 14.0,
            "spaceAfter": 6.0,
            "foreground": "#2c3e50"
        },
        "Heading5": {
            "parent": "Heading",
            "fontSize": 12.0,
            "spaceBefore": 12.0,
            "spaceAfter": 4.0,
            "foreground": "#2c3e50"
        },
        "Heading6": {
            "parent": "Heading",
            "fontSize": 12.0,
            "fontItalic": true,
            "spaceBefore": 10.0,
            "spaceAfter": 4.0,
            "foreground": "#2c3e50"
        },
        "BlockQuote": {
            "parent": "BodyText",
            "fontItalic": true,
            "foreground": "#666666"
        },
        "ListItem": {
            "parent": "BodyText"
        },
        "OrderedListItem": {
            "parent": "ListItem"
        },
        "UnorderedListItem": {
            "parent": "ListItem"
        },
        "TaskListItem": {
            "parent": "ListItem"
        },
        "CodeBlock": {
            "parent": "Default Paragraph Style",
            "baseCharacterStyle": "Code",
            "background": "#f5f5f5",
            "lineHeightPercent": 140
        },
        "HorizontalRule": {
            "parent": "Default Paragraph Style"
        },
        "MathDisplay": {
            "parent": "Default Paragraph Style"
        }
    },

    "characterStyles": {
        "Default Character Style": {
            "fontFamily": "Noto Serif",
            "fontSize": 12.0,
            "foreground": "#000000",
            "fontFeatures": ["liga", "kern", "calt", "onum"]
        },
        "DefaultText": {
            "parent": "Default Character Style"
        },
        "Strikethrough": {
            "parent": "Default Character Style",
            "strikeOut": true
        },
        "Subscript": {
            "parent": "Default Character Style"
        },
        "Superscript": {
            "parent": "Default Character Style"
        },
        "Code": {
            "parent": "Default Character Style",
            "fontFamily": "Source Code Pro",
            "fontSize": 10.5
        },
        "InlineCode": {
            "parent": "Code",
            "foreground": "#8b0000",
            "background": "#f5f5f0"
        },
        "Link": {
            "parent": "Default Character Style",
            "foreground": "#1a0dab",
            "underline": true
        },
        "MathInline": {
            "parent": "Default Character Style"
        },
        "Emoji": {
            "parent": "Default Character Style"
        }
    },

    "tableStyles": {
        "Default": {
            "borderCollapse": true,
            "cellPadding": { "top": 4, "bottom": 4, "left": 8, "right": 8 },
            "headerBackground": "#e8e8e8",
            "headerForeground": "#2c3e50",
            "alternateRowColor": "#f5f5f5",
            "outerBorder": { "width": 1.0, "color": "#2c3e50" },
            "innerBorder": { "width": 0.5, "color": "#bdc3c7" },
            "headerBottomBorder": { "width": 2.0, "color": "#2c3e50" },
            "headerParagraphStyle": "TableHeader",
            "bodyParagraphStyle": "TableBody"
        }
    },

    "pageLayout": {
        "pageSize": "A4",
        "orientation": "portrait",
        "margins": { "left": 30.0, "top": 30.0, "right": 25.0, "bottom": 25.0 },
        "header": {
            "enabled": true,
            "left": "",
            "center": "",
            "right": "{title}"
        },
        "footer": {
            "enabled": true,
            "left": "",
            "center": "{page}",
            "right": ""
        }
    },

    "footnoteStyle": {
        "format": "arabic",
        "startNumber": 1,
        "restart": "per_document",
        "prefix": "",
        "suffix": "",
        "superscriptRef": true,
        "superscriptNote": true,
        "asEndnotes": true,
        "showSeparator": true,
        "separatorWidth": 0.5,
        "separatorLength": 72.0
    },

    "masterPages": {
        "first": {
            "headerEnabled": false,
            "footerEnabled": true
        },
        "left": {
            "headerLeft": "{title}",
            "headerRight": "",
            "footerLeft": "{page}",
            "footerCenter": "",
            "footerRight": ""
        },
        "right": {
            "headerLeft": "",
            "headerRight": "{title}",
            "footerLeft": "",
            "footerCenter": "",
            "footerRight": "{page}"
        }
    }
}
