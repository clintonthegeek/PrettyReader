{
    "name": "Academic",
    "version": 1,
    "description": "Clean serif typography for academic reading",

    "paragraphStyles": {
        "BodyText": {
            "fontFamily": "Noto Serif",
            "fontSize": 12.0,
            "lineHeightPercent": 160,
            "spaceAfter": 8.0,
            "alignment": "justify",
            "foreground": "#1a1a1a"
        },
        "Heading1": {
            "fontFamily": "Noto Serif",
            "fontSize": 26.0,
            "fontWeight": "bold",
            "spaceBefore": 28.0,
            "spaceAfter": 14.0,
            "foreground": "#2c3e50"
        },
        "Heading2": {
            "fontFamily": "Noto Serif",
            "fontSize": 20.0,
            "fontWeight": "bold",
            "spaceBefore": 22.0,
            "spaceAfter": 10.0,
            "foreground": "#2c3e50"
        },
        "Heading3": {
            "fontFamily": "Noto Serif",
            "fontSize": 16.0,
            "fontWeight": "bold",
            "fontItalic": true,
            "spaceBefore": 18.0,
            "spaceAfter": 8.0,
            "foreground": "#2c3e50"
        },
        "Heading4": {
            "fontFamily": "Noto Serif",
            "fontSize": 14.0,
            "fontWeight": "bold",
            "spaceBefore": 14.0,
            "spaceAfter": 6.0,
            "foreground": "#2c3e50"
        },
        "Heading5": {
            "fontFamily": "Noto Serif",
            "fontSize": 12.0,
            "fontWeight": "bold",
            "spaceBefore": 12.0,
            "spaceAfter": 4.0,
            "foreground": "#2c3e50"
        },
        "Heading6": {
            "fontFamily": "Noto Serif",
            "fontSize": 12.0,
            "fontItalic": true,
            "spaceBefore": 10.0,
            "spaceAfter": 4.0,
            "foreground": "#2c3e50"
        },
        "BlockQuote": {
            "fontItalic": true,
            "foreground": "#666666",
            "spaceAfter": 8.0
        },
        "CodeBlock": {
            "fontFamily": "Source Code Pro",
            "fontSize": 10.0,
            "background": "#f5f5f5",
            "lineHeightPercent": 140
        }
    },

    "characterStyles": {
        "DefaultText": {
            "fontFamily": "Noto Serif",
            "fontSize": 12.0,
            "foreground": "#000000"
        },
        "InlineCode": {
            "fontFamily": "Source Code Pro",
            "fontSize": 10.5,
            "foreground": "#8b0000",
            "background": "#f5f5f0"
        },
        "Link": {
            "foreground": "#1a0dab",
            "underline": true
        }
    }
}
