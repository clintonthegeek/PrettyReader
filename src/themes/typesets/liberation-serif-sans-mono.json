{
    "id": "liberation-serif-sans-mono",
    "name": "Liberation",
    "version": 1,
    "type": "typeSet",
    "description": "Safe cross-platform default available on all Linux distros",
    "hersheyMode": false,
    "fonts": {
        "body": {
            "family": "Liberation Serif",
            "hersheyFamily": "Hershey Serif"
        },
        "heading": {
            "family": "Liberation Sans",
            "hersheyFamily": "Hershey Sans"
        },
        "mono": {
            "family": "Liberation Mono",
            "hersheyFamily": "Hershey Roman"
        }
    },
    "paragraphStyles": {
        "Default Paragraph Style": {
            "fontSize": 11.0,
            "lineHeightPercent": 100,
            "fontFeatures": [
                "liga",
                "kern",
                "calt",
                "onum"
            ]
        },
        "Heading": {
            "parent": "Default Paragraph Style",
            "fontWeight": "bold",
            "alignment": "left"
        },
        "BodyText": {
            "parent": "Default Paragraph Style",
            "alignment": "justify",
            "spaceAfter": 6.0
        },
        "Heading1": {
            "parent": "Heading",
            "fontSize": 28.0,
            "spaceBefore": 24.0,
            "spaceAfter": 12.0
        },
        "Heading2": {
            "parent": "Heading",
            "fontSize": 22.0,
            "spaceBefore": 20.0,
            "spaceAfter": 10.0
        },
        "Heading3": {
            "parent": "Heading",
            "fontSize": 18.0,
            "spaceBefore": 16.0,
            "spaceAfter": 8.0
        },
        "Heading4": {
            "parent": "Heading",
            "fontSize": 15.0,
            "spaceBefore": 12.0,
            "spaceAfter": 6.0
        },
        "Heading5": {
            "parent": "Heading",
            "fontSize": 13.0,
            "spaceBefore": 10.0,
            "spaceAfter": 4.0
        },
        "Heading6": {
            "parent": "Heading",
            "fontSize": 11.0,
            "fontItalic": true,
            "spaceBefore": 8.0,
            "spaceAfter": 4.0
        },
        "BlockQuote": {
            "parent": "BodyText",
            "fontItalic": true
        },
        "ListItem": {
            "parent": "BodyText"
        },
        "OrderedListItem": {
            "parent": "ListItem"
        },
        "UnorderedListItem": {
            "parent": "ListItem"
        },
        "TaskListItem": {
            "parent": "ListItem"
        },
        "CodeBlock": {
            "parent": "Default Paragraph Style",
            "baseCharacterStyle": "Code",
            "lineHeightPercent": 140
        },
        "TableHeader": {
            "parent": "Default Paragraph Style",
            "fontWeight": "bold",
            "alignment": "center"
        },
        "TableBody": {
            "parent": "Default Paragraph Style"
        },
        "HorizontalRule": {
            "parent": "Default Paragraph Style"
        },
        "MathDisplay": {
            "parent": "Default Paragraph Style"
        }
    },
    "characterStyles": {
        "Default Character Style": {
            "fontSize": 11.0,
            "fontFeatures": [
                "liga",
                "kern",
                "calt",
                "onum"
            ]
        },
        "DefaultText": {
            "parent": "Default Character Style"
        },
        "Emphasis": {
            "parent": "Default Character Style",
            "fontItalic": true
        },
        "Strong": {
            "parent": "Default Character Style",
            "fontWeight": "bold"
        },
        "StrongEmphasis": {
            "parent": "Default Character Style",
            "fontWeight": "bold",
            "fontItalic": true
        },
        "Strikethrough": {
            "parent": "Default Character Style",
            "strikeOut": true
        },
        "Subscript": {
            "parent": "Default Character Style"
        },
        "Superscript": {
            "parent": "Default Character Style"
        },
        "Code": {
            "parent": "Default Character Style",
            "fontSize": 10.0
        },
        "InlineCode": {
            "parent": "Code"
        },
        "Link": {
            "parent": "Default Character Style",
            "underline": true
        },
        "MathInline": {
            "parent": "Default Character Style"
        },
        "Emoji": {
            "parent": "Default Character Style"
        }
    },
    "tableStyles": {
        "Default": {
            "borderCollapse": true,
            "cellPadding": {
                "top": 3,
                "bottom": 3,
                "left": 6,
                "right": 6
            },
            "outerBorder": {
                "width": 1.0
            },
            "innerBorder": {
                "width": 0.5
            },
            "headerBottomBorder": {
                "width": 2.0
            },
            "headerParagraphStyle": "TableHeader",
            "bodyParagraphStyle": "TableBody"
        }
    },
    "footnoteStyle": {
        "format": "arabic",
        "startNumber": 1,
        "restart": "per_document",
        "prefix": "",
        "suffix": "",
        "superscriptRef": true,
        "superscriptNote": false,
        "asEndnotes": true,
        "showSeparator": true,
        "separatorWidth": 0.5,
        "separatorLength": 72.0
    }
}
